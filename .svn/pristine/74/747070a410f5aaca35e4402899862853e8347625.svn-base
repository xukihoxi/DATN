
<odoo>
    <data>
        <record id="view_pos_config_therapy_form" model="ir.ui.view">
            <field name="name">POS Config</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='category_reference']" position="after">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="x_is_sign_order"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="x_is_sign_order"/>
                            <div class="text-muted">
                                Sign order in pos order
                            </div>
                        </div>
                    </div>
                </xpath>

            </field>
        </record>
    </data>
</odoo>